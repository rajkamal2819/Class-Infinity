<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoreCoursesActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutMoreCourses"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple"
        app:tabSelectedTextColor="@color/dark_purple"
        app:tabTextColor="@color/light_purple"
        app:tabIndicatorColor="@color/dark_purple"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_below="@id/tabLayoutMoreCourses"
        android:id="@+id/viewPagerMoreCourses"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>